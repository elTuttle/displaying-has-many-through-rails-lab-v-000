<ul>
<%= @patients.each do |patient| %>
  <li><h2>Name: <%= link_to patient.name, patient_path(patient)%></h2></li>
  <%if patient.appointments.count > 1%>
    <li><p>Number of Appointments: <%=patient.appointments.count%></p></li>
  <%elsif patient.appointments.count == 1%>
    <li><p><%= pluralize(patient.appointments.count, 'Appointment') %></p></li>
  <%end%>
<%end%>
</ul>
